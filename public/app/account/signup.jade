.row
    .col-md-6
        .well
            form.form-horizontal(name="signUpForm")
                fieldset
                    legend Create new user
                    .form-group
                        label.col-md-2(for="firstName") First Name
                        .col-md-10
                            input.form-control(type="text" required="required" placeholder="First Name" ng-model="user.firstName")
                    .form-group
                        label.col-md-2(for="firstName") Last Name
                        .col-md-10
                            input.form-control(type="text" required="required" placeholder="Last Name" ng-model="user.lastName")
                    .form-group
                        label.col-md-2(for="firstName") User Name
                        .col-md-10
                            input.form-control(type="text" required="required" placeholder="User Name" ng-model="user.username")
                    .form-group
                        label.col-md-2(for="firstName") Password
                        .col-md-10
                            input.form-control(type="password" required="required" placeholder="Password" ng-model="user.password")
                    .pull-right
                        button.btn.btn-primary(ng-disabled="signUpForm.$invalid" ng-click="signup(user)") Register
                        a.btn.btn-primary(href="#/") Cancel
